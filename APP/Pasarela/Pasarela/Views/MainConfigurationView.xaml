<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pasarela.Core.Views.MainConfigurationView"
             xmlns:views="clr-namespace:Pasarela.Core.Views;assembly=Pasarela.Core"
             xmlns:viewModelBase="clr-namespace:Pasarela.Core.ViewModels.Base;assembly=Pasarela.Core"
             viewModelBase:ViewModelLocator.AutoWireViewModel="true"
             BarBackgroundColor="#C3C3C3">

    <views:MyDataView  x:Name="MyDataView">
        <views:MyDataView.Title>Mis datos</views:MyDataView.Title>
        <views:MyDataView.Icon>
            <OnPlatform 
                x:TypeArguments="FileImageSource"
                iOS="ic_tab_bar_favoritos"/>
        </views:MyDataView.Icon>
    </views:MyDataView>

    <views:ChangePasswordView x:Name="ChangePasswordView">
        <views:ChangePasswordView.Title>Cambiar contraseña</views:ChangePasswordView.Title>
        <views:ChangePasswordView.Icon>
            <OnPlatform 
                x:TypeArguments="FileImageSource"
                iOS="ic_tab_bar_compras_consumos"/>
        </views:ChangePasswordView.Icon>
    </views:ChangePasswordView>

</TabbedPage>